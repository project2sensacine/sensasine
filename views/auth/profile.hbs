<h1>Welcome, {{user.username}}! </h1>

<div class="favMov">
  <h3>Favourite movies</h3>
  <div class="glide">

    <div class="glide__track" data-glide-el="track">
      <ul class="glide__slides">

        {{#each favMovie}}

        <li class="glide__slide">

          <h5>{{title}}</h5>
          <figure><img src="https://image.tmdb.org/t/p/w185_and_h278_bestv2{{poster_path}}" alt="{{title}}"></figure>
          <a href="/movies/{{id}}/details">Ver detalles</a>
          <hr>

        </li>

        {{/each}}

      </ul>
    </div>
  </div>
</div>

<div class="info">
  <h3>Map of nearby cinemas</h3>

  <div>
    <input id="address" type="textbox" value="{{user.location}}">
    <input type="button" value="Search" onclick="initMap()">
  </div>

  <br>
  <div id="placeMap"></div>

  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script src="../javascripts/main.js"></script>
  <script
    src="https://maps.googleapis.com/maps/api/js?v=quarterly&key={{Api}}&callback=initMap&libraries=places"></script>

</div>